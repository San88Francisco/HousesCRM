{
  "type": "module",
  "name": "houses-crm",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"FRONT,SERVER\" -c \"cyan,green\" \"npm run dev --prefix client\" \"npm start --prefix server\"",
    "prepare": "husky install",
    "lint": "prettier --write . && eslint . --config eslint.config.js --fix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --ignore-pattern 'client/.next/**' --config eslint.config.js --fix",
      "git add"
    ]
  }
}
